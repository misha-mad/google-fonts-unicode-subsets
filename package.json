{
  "name": "google-fonts-unicode-subsets",
  "version": "0.1.0",
  "description": "Generator and dataset of Unicode subsets for Google Fonts, built from official .nam files.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "bun run clean && bun build.ts && bun run build:declaration",
    "build:declaration": "tsc --project tsconfig.types.json",
    "clean": "rm -rf dist",
    "generate": "bun src/generate.ts",
    "test": "bun test",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "devDependencies": {
    "bun-types": "1.3.3",
    "prettier": "3.7.2",
    "typescript": "5.9.3"
  }
}
